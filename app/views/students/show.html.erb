<div class="well">

<h1> <%= @student.first_name %> <%= @student.last_name %></h1>

<% if @student.image_file_name %>
      <%= image_tag @student.image.url(:thumbnail) %>
    <% end %>
    <%= form_for @student, url: student_image_path, html: {multipart: true} do |f| %>

    <%= f.file_field :image %>
    <%= submit_tag " Update" %>

    <% end %>


<h4>Address:</h4>
<h5><%= @student.address_1 %></h5> 
<h5><%= @student.address_2 %></h5> 
<h5><%= @student.city %>, <%= @student.state %></h5>
<h5><%= @student.zip %></h5>
<h5><%= @student.country %></h5>
<br>
<h4>Medical</h4>
<h5><%= @student.medical_condition %></h5>
<h5><%= @student.medications %></h5>
<br>
<h4>Personal</h4>
<h5><%= @student.birth_date %></h5>
<h5><%= @student.gender %></h5>
<h5><%= @student.gender %></h5>
<br>
<h4>Emergency Contact</h4>
<h5><%= @student.emergency_contact %></h5>
<h5><%= @student.emergency_contact_phone %></h5>


<%= link_to "Edit Information", "/students/#{ @student.id}/edit"%>
<br>
<%= link_to "Remove Student", "/students/#{ @student.id }", method: :delete %>

</div>